#!/bin/tcsh
# Copyright (c) 2010 California Institute of Technology.
# ALL RIGHTS RESERVED. U.S. Government Sponsorship acknowledged.
#
# $Id$
#
# Sample call: sudo ./ingest_barrett_t4predict http://localhost:9000 /data/ingest/barrett/t4predict Unique

set ORIG_DIR = $cwd
set DIR = `dirname $0`
cd $DIR
set DIR_PATH = `pwd`

if ( $#argv != 2 && $#argv != 3) then
   echo "Usage: $0 <filemgr url> <data dir path> [<action ids>]"
   exit 1
else
   set ACTIONS = $3
   if ( $ACTIONS == "" ) then
      cd $DIR_PATH/../crawler/bin
      ./crawler_launcher \
      --crawlerId MetExtractorProductCrawler \
      --metExtractor gov.nasa.jpl.oodt.cas.metadata.extractors.CopyAndRewriteExtractor \
      --metExtractorConfig $EDRN_ECAS_HOME/aux/met_def/ecas.hopkins.meltzer.t4predict.copyandrewrite.conf \
      --filemgrUrl $1 \
      --productPath $2 \
      --failureDir /data/failed_ingest_files \
      --metFileExtension met \
      --clientTransferer gov.nasa.jpl.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory
   else
      cd $DIR_PATH/../crawler/bin
      ./crawler_launcher \
      --crawlerId MetExtractorProductCrawler \
      --metExtractor gov.nasa.jpl.oodt.cas.metadata.extractors.CopyAndRewriteExtractor \
      --metExtractorConfig $EDRN_ECAS_HOME/aux/met_def/ecas.hopkins.meltzer.t4predict.copyandrewrite.conf \
      --filemgrUrl $1 \
      --productPath $2 \
      --failureDir /data/failed_ingest_files \
      --metFileExtension met \
      --actionIds $ACTIONS \
      --clientTransferer gov.nasa.jpl.oodt.cas.filemgr.datatransfer.LocalDataTransferFactory
   endif
endif
